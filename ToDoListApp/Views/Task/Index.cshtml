@model IEnumerable<ToDoListApp.Models.ToDoTask>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">ToDo List</h2>
        <a href="@Url.Action("Create", "Task")" class="btn btn-primary mb-3">Add New Task</a>
        <table class="table table-hover table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Task Name</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Deadline</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center">No tasks found. Click "Add New Task" to create one!</td>
                    </tr>
                }
                else
                {
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.Name</td>
                            <td>@task.Description</td>
                            <td>@task.Date.ToString("yyyy-MM-dd")</td>
                            <td>@task.Deadline.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(task.ImagePath))
                                {
                                    <img src="@Url.Content(task.ImagePath)" alt="Image" width="100" class="img-thumbnail">
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>
                                <span class="badge 
                                    @(task.Priority == "New Task" ? "bg-danger" :
                                      task.Priority == "Process" ? "bg-primary" :
                                      task.Priority == "Completed" ? "bg-success" : "bg-secondary")">
                                    @task.Priority
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Task", new { id = task.Id })" class="btn btn-warning btn-sm">Edit</a>
                                <a href="@Url.Action("Delete", "Task", new { id = task.Id })" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
