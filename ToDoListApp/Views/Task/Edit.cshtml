@model ToDoListApp.Models.ToDoTask

@{
    ViewData["Title"] = "Edit Task";
}

<h2 class="text-center text-primary">Edit Task</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="p-4 border rounded shadow-lg bg-white" style="max-width: 600px; margin: auto;">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-bold">Title</label>
        <input asp-for="Name" class="form-control" required placeholder="Enter task title..." />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Date" class="form-label fw-bold">Start Date</label>
        <input asp-for="Date" type="date" class="form-control" required />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Deadline" class="form-label fw-bold">Deadline</label>
        <input asp-for="Deadline" type="date" class="form-control" required />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Status</label>
        <div class="d-flex gap-3">
            <div class="form-check">
                <input asp-for="Priority" class="form-check-input" type="radio" id="PriorityNew" value="New Task" />
                <label class="form-check-label text-danger fw-semibold" for="PriorityNew">New Task</label>
            </div>
            <div class="form-check">
                <input asp-for="Priority" class="form-check-input" type="radio" id="PriorityProcess" value="Process" />
                <label class="form-check-label text-primary fw-semibold" for="PriorityProcess">Process</label>
            </div>
            <div class="form-check">
                <input asp-for="Priority" class="form-check-input" type="radio" id="PriorityCompleted" value="Completed" />
                <label class="form-check-label text-success fw-semibold" for="PriorityCompleted">Completed</label>
            </div>
        </div>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-bold">Task Description</label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Start writing here..." required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div class="mb-3">
            <label class="form-label fw-bold">Current Image</label>
            <div>
                <img src="@Model.ImagePath" alt="Current Task Image" class="img-thumbnail rounded shadow-sm" style="max-width: 100%;" />
            </div>
        </div>
    }

    <div class="mb-3">
        <label class="form-label fw-bold">Change Image (Optional)</label>
        <input type="file" name="image" class="form-control" />
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-warning px-5 fw-bold shadow">Update</button>
        <a asp-action="Index" class="btn btn-secondary px-5 fw-bold shadow">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
